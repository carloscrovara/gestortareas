<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <div id="header">
                <h1>Gestor de tareas</h1>
                <ul id="menu">
                    {% if app.user %}
                        <li><a href="{{ path('tasks') }}">Inicio</a></li>
                        <li><a href="{{ path('my_tasks') }}">Mis tareas</a></li>
                        <li><a href="{{ path('task_creation') }}">Crear tarea</a></li>
                        
                        <li class="right"><a href="{{ path('logout') }}">Cerrar sesi√≥n</a></li>
                        <li class="right"><a href="">{{ 'Hola, '~ app.user.name ~ ' ' ~ app.user.surname }}</a></li>
                    {% else %}
                        <li><a href="{{ path('login') }}">Login</a></li>
                        <li><a href="{{ path('register') }}">Registro</a></li>
                    {% endif %}
                </ul>
            </div>
            <div class="clearfix"></div>   
        {% endblock %}
        
        {% block body %}{% endblock %}
        
        {% block footer %}
            <footer id="footer-gral">
                <p class="text-footer">Desarrollado con el <ion-icon name="heart"></ion-icon> por Carlos Marino Crovara.</p>
            </footer>
        {% endblock %}
    </body>
</html>
